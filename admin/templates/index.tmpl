{{.RenderIndex .Result .Resource}}

<article class="article clearfix" id="orders">
  <section class="section filter-wrapper">
    
  </section>
  
  <section class="section table-wrapper">
  <table class="table">
    <thead>
      <tr>
        {{range $meta := allowed_metas .Resource}}
          <th>{{$meta.Label}}</th>
        {{end}}
      </tr>
    </thead>

    <tbody>

      {{range $resource := .Result}}
        <tr>
          {{range $index, $meta := allowed_metas}}
            {{$text := .ValueOf $resource $meta}}
            <td>
              {{if $index}}
                {{$text}}
              {{else}}
                {{.LinkTo $text $resource}}
              {{end}}
            </td>
          {{end}}

          <!-- <form action="{{url_for $resource}}" method="POST" style="display:inline">
            <input name="_method" value="DELETE" type="hidden">
            <input value="DELETE" type="submit"/>
          </form> -->
        </tr>
      {{end}}
    </tbody>
  </table>
  </section>

</article>
