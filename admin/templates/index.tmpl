{{define "content"}}
<article class="article clearfix" id="orders">
  <section class="section filter-wrapper">
    <div class="wrapper">
      <div class="fl filters">
        <section class="section fl filter-wrap">
          <select name="" id="" class="select-type">
            <option value="">All bookings</option>
            <option value="">Indoor</option>
            <option value="">Outdoor</option>
          </select>
        </section>
      </div>
      <div class="statistics fl"></div>
      <div class="fr actions"></div>
    </div>
  </section>
  
  <section class="section table-wrapper">
  <table class="table">
    <thead>
      <tr>
        {{range $meta := allowed_metas .Resource}}
          <th>{{$meta.Label}}</th>
        {{end}}
      </tr>
    </thead>

    <tbody>

      {{range $resource := .Result}}
        <tr>
          {{range $index, $meta := allowed_metas}}
            {{$text := value_of $resource $meta}}
            <td>
              {{if $index}}
                {{$text}}
              {{else}}
                {{link_to $text $resource}}
              {{end}}
            </td>
          {{end}}

          <!-- <form action="{{url_for $resource}}" method="POST" style="display:inline">
            <input name="_method" value="DELETE" type="hidden">
            <input value="DELETE" type="submit"/>
          </form> -->
        </tr>
      {{end}}
    </tbody>
  </table>
  </section>

</article>
{{end}}
