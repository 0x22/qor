{{$Resource := .Resource}}

<table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp qor-table">
  <thead>
    <tr>
      {{range $index, $meta := index_metas}}
        <th class="mdl-data-table__cell--non-numeric">{{dt (printf "%v.attributes.%v" $Resource.ToParam $meta.Label) $meta.Label}}</th>
      {{end}}
      <th class="mdl-data-table__cell--non-numeric qor-table__action">{{t "Actions"}}</th>
    </tr>
  </thead>

  <tbody>
    {{range $resource := .Result}}
      <tr data-primary-key="{{primary_key_of $resource}}">
        {{range $meta := index_metas}}
          <td class="mdl-data-table__cell--non-numeric" data-heading="{{rt $Resource $meta.Label}}">
            <div class="qor-table-content">{{render_index_meta $resource $meta}}</div>
          </td>
        {{end}}

        <td class="mdl-data-table__cell--non-numeric qor-table__action">
          {{if has_update_permission $Resource}}
            <a class="mdl-button mdl-js-button mdl-button--icon mdl-button--colored qor-button--edit" href="{{url_for $resource}}">
              <i class="material-icons">edit</i>
            </a>
          {{end}}
          {{if has_delete_permission $Resource}}
            <a class="mdl-button mdl-js-button mdl-button--icon mdl-button--accent qor-button--delete" href="{{url_for $resource}}" data-method="DELETE" data-confirm="{{t "Are you sure?"}}">
              <i class="material-icons">delete</i>
            </a>
          {{end}}
        </td>
      </tr>
    {{end}}
  </tbody>
</table>
