{{$scopes := get_scopes}}
{{if $scopes}}
  <div class="qor-filter" data-toggle="qor.filter">
    {{range $scope := $scopes}}
      {{if $scope.Group}}
        <select class="qor-scope-group" data-toggle="qor.selector" data-clearable="true" name="scopes" placeholder="{{$scope.Group}}">
          {{range $s := $scope.Scopes}}
            <option value="{{$s.Name}}"{{if $s.Active}} selected{{end}}>{{t $s.Label}}</option>
          {{end}}
        </select>
      {{else}}
        {{range $s := $scope.Scopes}}
          <a class="qor-scope {{if $s.Active}}is-active{{end}}" href="{{patch_current_url "scopes" $s.Name}}">
            {{t $s.Label}}
            {{if $s.Active}}
              <i class="material-icons qor-scope__clear">clear</i>
            {{end}}
          </a>
        {{end}}
      {{end}}
    {{end}}
  </div>
{{end}}
