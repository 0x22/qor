<div class="qor-field">
  <label class="qor-field__label" for="{{.InputId}}">{{dt (printf "%v.attributes.%v" .Base.ToParam .Label) .Label}}</label>
  <div class="qor-field_block">
    {{if .Meta.Resource}}
      <textarea id="{{.InputId}}" data-toggle="qor.redactor" data-upload-url="{{url_for .Meta.Resource}}/upload" data-crop-url="{{url_for .Meta.Resource}}/crop" name="{{.InputName}}" {{if not (has_update_permission .Meta)}} disabled{{end}}>{{if .Value}}{{.Value}}{{end}}</textarea>
    {{else}}
      <textarea id="{{.InputId}}" data-toggle="qor.redactor" name="{{.InputName}}" {{if not (has_update_permission .Meta)}} disabled{{end}}>{{if .Value}}{{.Value}}{{end}}</textarea>
    {{end}}
  </div>
</div>
