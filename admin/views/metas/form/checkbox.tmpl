<div class="qor-field">
  <div class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect">
    <label class="mdl-checkbox__label" for="{{.InputId}}">
      {{meta_label .Meta}}
    </label>

    <span class="qor-field__show">
      {{.Value}}
    </span>

    <div class="qor-field__edit">
      <input type="checkbox" id="{{.InputId}}" name="{{.InputName}}" class="mdl-checkbox__input" value="true" type="checkbox" {{if .Value}}checked{{end}} {{if not (has_update_permission .Meta)}}disabled{{end}}>
      <input type="hidden" name="{{.InputName}}" value="false">
    </div>
  </div>
</div>
