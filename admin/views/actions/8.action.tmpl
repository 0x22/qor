{{$context := .}}
{{$action_mode := .Context.Request.URL.Query.Get "action_mode"}}
{{$allowed_actions := (allowed_actions $context.Resource.Actions $context.Action)}}
{{$resource := .Resource}}
{{$result := .Result}}
{{if gt (len $allowed_actions) 0 }}

  <div>
    <div class="qor-action-forms">
      {{range $action := $allowed_actions}}
        <a class="mdl-button mdl-button--colored mdl-button--raised mdl-js-button mdl-js-ripple-effect qor-action-button"  data-url="{{url_for $result $resource}}/{{$action.ToParam}}" href="{{url_for $result $resource}}/{{$action.ToParam}}" {{if not $action.Resource}}data-dataType="json" data-confirm="{{t "qor_admin.form.are_you_sure"}}" data-method="PUT"{{end}}>
          {{t (printf "%v.actions.%v" $resource.ToParam $action.Label) $action.Label}}
        </a>
      {{end}}
    </div>
  </div>

{{end}}
