{{$value := .Value}}

<div>
  <label class="label" for="{{.InputId}}">{{.Label}}</label>
  <input id="{{.InputId}}" name="{{.InputName}}" class="image-cropper-upload" type="file">
  {{if $value}}
    {{if $value.IsImage}}
      <img class="image-cropper" src="{{$value.URL}}">

      {{range $key, $v := $value.GetSizes}}
        <img src="{{$value.URL $key}}">
      {{end}}
    {{else}}
      <a href="{{$value.URL}}">Download</a>
    {{end}}

    <textarea name="{{.InputName}}" class="image-cropper-crop-option" style="display:none">
      {{$value.Value}}
    </textarea>
  {{end}}
</div>
