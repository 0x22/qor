<div class="section row">
  <div class="col-sm-6">
    {{$resource := .Resource}}
    {{range $locale := createable_locales .}}
      <a class="btn btn-primary" href="{{new_resource_path $resource}}?locale={{$locale}}">{{printf "New %v" $locale}}</a>
    {{end}}
  </div>
  <div class="col-sm-6">
    <div class="pull-right dropdown lang-selector">
      {{$current_locale := current_locale .}}
      <a class="dropdown-toggle btn btn-primary" data-toggle="dropdown" href="javascript:void(0);" aria-expanded="false" role="button">
        {{$current_locale}} <span class="caret"></span>
      </a>
      <ul class="dropdown-menu" role="menu">
        {{range $locale := viewable_locales .}}
          <li{{if (eq $current_locale $locale)}} class="active"{{end}}>
            <a href="{{url_for $resource}}?locale={{$locale}}">{{$locale}}</a>
          </li>
        {{end}}
      </ul>
    </div>
  </div>
</div>

{{render "index/filter"}}
{{render "index/table"}}
{{render "index/pagination"}}
