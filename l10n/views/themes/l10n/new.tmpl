<header class="qor-header">
  <h1 class="qor-title">{{rt .Resource (printf "Add %v" (singular .Resource.Name))}}</h1>
  {{render "navbar"}}
</header>

<div class="qor-body">
  {{range $flash := flashes}}
    <div class="qor-alert qor-alert-{{$flash.Type}}" data-dismissible="true" role="alert">
      <button type="button" class="material-icons md-18" data-dismiss="alert">close</button>
      {{$flash.Message}}
    </div>
  {{end}}

  <div class="qor-form-container">
    <form class="qor-form" action="{{patch_url (url_for .Resource) "locale" (current_locale .)}}" method="POST" enctype="multipart/form-data">
      {{render_form .Result new_metas}}
      <div class="qor-btn-group">
        <button class="btn btn-primary qor-action-save" type="submit">{{rt .Resource (printf "Add %v" (singular .Resource.Name))}}</button>
        <a class="btn btn-default qor-action-cancel" href="javascript:history.back();">{{t "Cancel"}}</a>
      </div>
    </form>
  </div>
</div>

<footer class="qor-footer"></footer>
