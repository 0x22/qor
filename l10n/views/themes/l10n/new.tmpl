<div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header qor-layout">
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <span class="mdl-layout-title">{{rt .Resource (printf "Add %v" (singular .Resource.Name))}}</span>
      {{render "shared/navbar"}}
    </div>
  </header>
  <div class="mdl-layout__drawer">
    {{render "shared/sidebar"}}
  </div>
  <main class="mdl-layout__content qor-page" id="content">
    {{$actions := load_index_actions}}
    {{if $actions}}
      <div class="qor-page__header">
        {{$actions}}
      </div>
    {{end}}

    <div class="qor-page__body">
      <div class="qor-form-container">
        {{range $flash := flashes}}
          <div class="qor-alert qor-alert-{{$flash.Type}}" data-dismissible="true" role="alert">
            <button type="button" class="material-icons md-18" data-dismiss="alert">close</button>
            {{$flash.Message}}
          </div>
        {{end}}
        <form class="qor-form" action="{{patch_url (url_for .Resource) "locale" (current_locale .)}}" method="POST" enctype="multipart/form-data">
          {{render_form .Result new_metas}}
          <div class="qor-btn-group">
            <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect qor-action-save" type="submit">{{rt .Resource (printf "Add %v" (singular .Resource.Name))}}</button>
            <a class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect qor-action-cancel" href="javascript:history.back();">{{t "Cancel"}}</a>
          </div>
        </form>
      </div>
    </div>
    <div class="qor-page__footer"></div>
  </main>
</div>
