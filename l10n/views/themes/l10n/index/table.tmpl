{{$context := .}}

<section class="section table-wrapper">
<table class="table">
  <thead>
    {{range $meta := index_metas}}
      <th>{{$meta.Label}}</th>
    {{end}}
  </thead>

  <tbody>
    {{range $resource := .Result}}
      <tr>
        {{range $index, $meta := index_metas}}
          {{$text := value_of $resource $meta}}
          <td>
            {{if $index}}
              {{$text}}
            {{else}}
              {{link_to $text $resource}}
            {{end}}
          </td>
        {{end}}

        <td>
          <ul>
            {{range $resource_locale := locales_of_resource $resource $context}}
              <li>
                <a class="{{if $resource_locale.localized}}localized{{end}}"
                  href="{{url_for $resource}}?locale={{$resource_locale.locale}}">
                  {{$resource_locale.locale}}
                </a>
              </li>
            {{end}}
          </ul>
        </td>

        <td>
          <form action="{{url_for $resource}}" method="POST" style="display:inline">
            <input name="_method" value="DELETE" type="hidden">
            <input value="DELETE" type="submit"/>
          </form>
        </td>
      </tr>
    {{end}}
  </tbody>
</table>
</section>

<style>
  /* move it to css file  */
  .active, .localized {
    font-weight: 700;
  }
</style>
