<header class="qor-header">
  <h1 class="qor-title">{{rt .Resource (printf "Edit %v" (singular .Resource.Name))}}</h1>
  {{render "navbar"}}
</header>

<div class="qor-body">
  {{$actions := load_show_actions}}
  {{if $actions}}
    <header class="qor-subheader">
      {{$actions}}
    </header>
  {{end}}

  <div class="qor-form-container">
    <form class="qor-form" action="{{patch_current_url "locale" (current_locale .)}}" method="POST" enctype="multipart/form-data">
      {{render_form .Result edit_metas}}
      <div class="qor-btn-group">
        <button class="btn btn-primary qor-action-save" type="submit">{{t "Save Changes"}}</button>
        <a class="btn btn-default qor-action-cancel" href="javascript:history.back();">{{t "Cancel Edit"}}</a>
      </div>
    </form>
  </div>
</div>

<footer class="qor-footer"></footer>
